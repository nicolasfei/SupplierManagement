<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/list_background"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/supplier"
        style="@style/TextViewStyleItem"
        android:layout_height="50dp"
        android:singleLine="false"
        android:text="供应商：9527 丫头弟弟"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.6" />

    <TextView
        android:id="@+id/valid"
        style="@style/TextViewStyleItem"
        android:layout_height="50dp"
        android:singleLine="false"
        android:text="启用"
        app:layout_constraintStart_toEndOf="@+id/supplier"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4" />

    <View
        android:id="@+id/divider0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/supplier" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider0"
        app:layout_constraintWidth_percent="0.3">

        <TextView
            android:id="@+id/goodsId"
            style="@style/TextViewStyleItem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="false"
            android:text="货号：200423DF" />

        <TextView
            android:id="@+id/scoreClassName"
            style="@style/TextViewStyleItem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="false"
            android:text="信誉分说明：不按时交货" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/line1"
        app:layout_constraintTop_toBottomOf="@+id/divider0"
        app:layout_constraintWidth_percent="0.3">

        <TextView
            android:id="@+id/val"
            style="@style/TextViewStyleItem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="false"
            android:text="扣除/增加：20.00" />

        <TextView
            android:id="@+id/balance"
            style="@style/TextViewStyleItem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="false"
            android:text="当前积分：300.00" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/line2"
        app:layout_constraintTop_toBottomOf="@+id/divider0"
        app:layout_constraintWidth_percent="0.4">

        <TextView
            android:id="@+id/recordTime"
            style="@style/TextViewStyleItem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="false"
            android:text="扣除/增加日期：2020-06-21 14:12:53" />

        <TextView
            android:id="@+id/opTime"
            style="@style/TextViewStyleItem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="false"
            android:text="操作日期：2020-06-21 14:12:55" />
    </LinearLayout>

    <TextView
        android:id="@+id/remark"
        style="@style/TextViewStyleItem"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:singleLine="false"
        android:text="备注：违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作违规操作"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1" />
</androidx.constraintlayout.widget.ConstraintLayout>